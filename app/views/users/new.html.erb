<h1 class="logins_header">Welcome to DaguerreoTyp</h1>

<div class="logins">
  <%= render "shared/errors" %>

  <form action="<%= users_url %>" method="post" class="logins">
    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

    <input type="text"
           placeholder="username"
           name="user[username]"
           id="user_username"
           value="<%= @user.username %>">
    <br>

    <input type="password"
           placeholder="password"
           name="user[password]"
           id="user_password"
           value="<%= @user.password %>">
    <br>

    <input type="submit">
  </form>
</div>
<form action="<%= session_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <input type="hidden" placeholder="username" name="user[username]" value="Juraj" id="user_username">
  <br>

  <input type="hidden" placeholder="password" name="user[password]" value="qwerty" id="user_password">
  <br>

  <input type="submit">Sign in as Guest</input>
</form>
<div class="logins_switch">
  <%= link_to "Already a Daguerreotypist? Sign In!", new_session_url %>
</div>
